<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:scaleType="center"
        android:background="#000"
        android:contentDescription="@string/app_name" />

    <EditText
        android:id="@+id/tf_changepassword_old"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="@string/eski_ifre"
        android:inputType="textPassword" />

    <EditText
        android:id="@+id/tf_changepassword_new"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="@string/yeni_ifre"
        android:inputType="textPassword" />

    <EditText
        android:id="@+id/tf_changepassword_new_confirm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="@string/yeni_ifre_onayla"
        android:inputType="textPassword" />

</LinearLayout>
